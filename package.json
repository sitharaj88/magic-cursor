    },
    "categories": [
        "Themes",
        "Other"
    ],
    "keywords": [
        "cursor",
        "animation",
        "rainbow",
        "trail",
        "effects",
        "sparkle",
        "fun",
        "visual",
        "magic",
        "power mode",
        "particles",
        "neon",
        "glow"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "configuration": {
            "title": "Magic Cursor",
            "properties": {
                "magicCursor.enableTrails": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable beautiful cursor trail effects"
                },
                "magicCursor.enableParticles": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable sparkle effects when typing"
                },
                "magicCursor.cursorStyle": {
                    "type": "string",
                    "enum": [
                        "rainbow",
                        "neon",
                        "aurora",
                        "sunset"
                    ],
                    "enumDescriptions": [
                        "ðŸŒˆ Rainbow - Colorful rainbow trail effect",
                        "ðŸ’œ Neon - Purple to cyan gradient with glow",
                        "ðŸ’š Aurora - Green to blue Northern Lights effect",
                        "ðŸ§¡ Sunset - Warm orange to pink gradient"
                    ],
                    "default": "rainbow",
                    "description": "Choose your cursor trail style"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js",
        "package": "vsce package"
    },
    "devDependencies": {
        "@types/vscode": "^1.80.0",
        "@types/node": "16.x",
        "typescript": "^5.1.3"
    }
